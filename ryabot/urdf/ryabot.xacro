<?xml version='1.0'?>

<robot name="ryabot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- include plugin settings -->
    <xacro:include filename="$(find ryabot)/urdf/ryabot.gazebo" />
    
    <!-- define robot links -->
    <link name="robot_footprint"></link>
    
    <link name="chassis">
        <pose>0 0 0.05 0 0 0</pose>
        
        <inertial>
            <mass value="5.0" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
        
        <!-- wheel base -->
        <collision name="wheel_base_col">
            <origin xyz="0 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.30 0.20 0.10" />
            </geometry>
        </collision>
        
        <visual name="wheel_base_vis">
            <origin xyz="0 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.30 0.20 0.10" />
            </geometry>
        </visual>
        
        <!-- top plate -->
        <collision name="plate_col">
            <origin xyz="0 0 0.08" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.2" length="0.02" />
            </geometry>
        </collision>
        
        <visual name="plate_vis">
            <origin xyz="0 0 0.08" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.2" length="0.02" />
            </geometry>
        </visual>
        
        <!-- front caster -->
        <collision name="front_caster_col">
            <origin xyz="0.12 0 -0.02" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </collision>
        
        <visual name="front_caster_vis">
            <origin xyz="0.12 0 -0.02" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </visual>
        
        <!-- back caster -->
        <collision name="back_caster_col">
            <origin xyz="-0.12 0 -0.02" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </collision>
        
        <visual name="back_caster_vis">
            <origin xyz="-0.12 0 -0.02" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </visual>
    </link>
    
    <link name="left_wheel">
        <inertial>
            <mass value="1.0" />
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <inertia
                ixx="0.1" ixy="0.0" ixz="0.0"
                iyy="0.1" iyz="0.0"
                izz="0.1" />
        </inertial>
        
        <collision name="left_wheel_col">
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </collision>
        
        <visual name="left_wheel_vis">
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </visual>
    </link>
    
    <link name="right_wheel">
        <inertial>
            <mass value="1.0" />
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <inertia
                ixx="0.1" ixy="0.0" ixz="0.0"
                iyy="0.1" iyz="0.0"
                izz="0.1" />
        </inertial>
        
        <collision name="right_wheel_col">
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </collision>
        
        <visual name="right_wheel_vis">
            <origin xyz="0 0 0" rpy="0.0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </visual>
    </link>
    
    <link name="camera">
        <inertial>
            <mass value="0.1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia
                ixx="1e-6" ixy="0" ixz="0"
                iyy="1e-6" iyz="0"
                izz="1e-6" />
        </inertial>
        
        <collision name="camera_col">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.01 0.03 0.03" />
            </geometry>
        </collision>
        
        <visual name="camera_vis">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.01 0.03 0.03" />
            </geometry>
        </visual>
    </link>
    
    <link name="hokuyo">
        <inertial>
            <mass value="0.10" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia
                ixx="1e-6" ixy="0" ixz="0"
                iyy="1e-6" iyz="0"
                izz="1e-6" />
        </inertial>
        
         <collision name="urg_col">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </collision>
        
        <visual name="urg_vis">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://ryabot/meshes/hokuyo.dae" />
            </geometry>
        </visual>
    </link>
    
